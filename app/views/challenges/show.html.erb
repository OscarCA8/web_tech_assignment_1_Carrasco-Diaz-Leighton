<div class="container mt-4">
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h2 class="card-title"><%= @challenge.name %></h2>
      <p class="card-text"><%= @challenge.description %></p>

      <p class="card-text small text-muted mb-1">
        <strong>Start Date:</strong> <%= @challenge.start_day %> |
        <strong>End Date:</strong> <%= @challenge.end_day %>
      </p>

      <p class="card-text small text-muted mb-2">
        <strong>Points Rule:</strong> <%= @challenge.point_rules %>
      </p>

      <p class="card-text small text-muted mb-3">
        <strong>Created by:</strong> <%= @challenge.creator&.name || "Unknown" %>
      </p>

      <div class="mb-3">
        <% if current_user %>
          <% if current_user.participations.exists?(challenge: @challenge) %>
            <%= button_to "Leave Challenge", leave_challenge_path(@challenge), method: :delete, class: "btn btn-secondary me-2" %>
          <% else %>
            <%= button_to "Join Challenge", join_challenge_path(@challenge), method: :post, class: "btn btn-primary me-2" %>
          <% end %>
        <% end %>

        
        <%= link_to "Edit Challenge", edit_challenge_path(@challenge), class: "btn btn-warning me-2" %>
        <%= link_to "Delete", challenge_path(@challenge), class: "btn btn-sm btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>

  <!-- Challenge Badges -->
  <div class="card shadow-sm mb-4">
    <div class="card-header">
      <h5>Badges for this Challenge</h5>
    </div>
    <div class="card-body d-flex flex-wrap gap-2">
      <% @challenge.challenge_badges.each do |cb| %>
        <div class="badge bg-success p-2">
          <strong><%= cb.badge.name %></strong><br>
          <small><%= cb.requirement %></small>
        </div>
      <% end %>
      <% if @challenge.challenge_badges.empty? %>
        <p class="text-muted">No badges yet for this challenge.</p>
      <% end %>
    </div>
  </div>

  <!-- Participants -->
  <div class="card shadow-sm mb-4">
    <div class="card-header">
      <h5>Participants</h5>
    </div>
    <ul class="list-group list-group-flush">
      <% @challenge.participations.each do |p| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= p.user.name %> - <strong>Points:</strong> <%= p.points %>
          <% if current_user && (current_user == @challenge.creator || current_user.is_admin?) %>
            <%= link_to "Remove", participation_path(p), method: :delete, data: { confirm: "Remove this participant?" }, class: "btn btn-sm btn-danger" %>
          <% end %>
        </li>
      <% end %>
      <% if @challenge.participations.empty? %>
        <li class="list-group-item text-muted">No participants yet.</li>
      <% end %>
    </ul>
  </div>

  <!-- Progress Entries -->
  <div class="card shadow-sm mb-4">
    <div class="card-header">
      <h5>Progress Entries</h5>
    </div>
    <ul class="list-group list-group-flush">
      <% @challenge.progress_entries.order(date: :desc).each do |entry| %>
        <li class="list-group-item">
          <strong><%= entry.user.name %></strong> - <%= entry.points %> points on <%= entry.date %>
          <br>
          <small><%= entry.description %></small>
        </li>
      <% end %>
      <% if @challenge.progress_entries.empty? %>
        <li class="list-group-item text-muted">No progress entries yet.</li>
      <% end %>
    </ul>
  </div>
</div>
