<h1 class="mb-4">Challenges</h1>

<div class="row">
  <% @challenges.each do |c| %>
    <div class="col-md-6 mb-3">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><%= link_to c.name, c, class: "text-decoration-none stretched-link" %></h5>
          <p class="card-text"><%= c.description.truncate(120) if c.description.present? %></p>
          <p class="card-text small text-muted mb-0">
            <strong>Start:</strong> <%= c.start_day %> |
            <strong>End:</strong> <%= c.end_day %>
          </p>
          <p class="card-text small text-muted">
            <strong>Creator:</strong> <%= c.try(:creator)&.try(:name) %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
