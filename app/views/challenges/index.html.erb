<h1 class="mb-4">Challenges</h1>

<div class="mb-3">
  <%= link_to "New Challenge", new_challenge_path, class: "btn btn-primary mt-3" %>
</div>

<div class="row">
  <% @challenges.each do |c| %>
    <div class="col-md-6 mb-3">
      <div class="card h-100 shadow-sm">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">
            <%= link_to c.name, c, class: "text-decoration-none" %>
          </h5>

          <% if c.description.present? %>
            <p class="card-text"><%= c.description.truncate(120) %></p>
          <% end %>

          <p class="card-text small text-muted mb-0">
            <strong>Start:</strong> <%= c.start_day %> |
            <strong>End:</strong> <%= c.end_day %>
          </p>

          <p class="card-text small text-muted mb-2">
            <strong>Points Rule:</strong> <%= c.point_rules %>
          </p>

          <p class="card-text small text-muted mb-3">
            <strong>Creator:</strong> <%= c.creator&.name || "Unknown" %>
          </p>

          <div class="mt-auto d-flex flex-wrap gap-2">
            <div>
              <%= link_to "Show", challenge_path(c), class: "btn btn-sm btn-info" %>
              <%= link_to "Edit", edit_challenge_path(c), class: "btn btn-sm btn-warning" %>
              <%= link_to "Delete", challenge_path(c), class: "btn btn-sm btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </div>
            <% if current_user %>
              <% if current_user.participations.exists?(challenge: c) %>
                <%= button_to "Leave Challenge", leave_challenge_path(c), method: :delete, class: "btn btn-sm btn-secondary" %>
              <% else %>
                <%= button_to "Join Challenge", join_challenge_path(c), method: :post, class: "btn btn-sm btn-primary" %>
              <% end %>
            <% end %>

            <% if c.challenge_badges.any? %>
              <span class="badge bg-success align-self-center">
                <%= c.challenge_badges.count %> Badge<%= "s" if c.challenge_badges.count > 1 %>
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
