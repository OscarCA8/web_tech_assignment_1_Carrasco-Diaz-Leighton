<%= form_with(model: [ @challenge, @progress_entry ].compact, local: true) do |form| %>
  <% if @progress_entry.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @progress_entry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :date, "Entry Date", class: "form-label" %>
    <%= form.date_field :date, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :points, "Points Earned", class: "form-label" %>
    <%= form.number_field :points, class: "form-control", placeholder: "Enter points earned", min: 0, required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Description", class: "form-label" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Describe your activity", rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", challenge_progress_entries_path(@challenge), class: "btn btn-secondary ms-2" %>
  </div>
<% end %>