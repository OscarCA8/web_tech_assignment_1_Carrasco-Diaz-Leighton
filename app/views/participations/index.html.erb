<h1 class="mb-4">Participations</h1>

<table class="table table-bordered table-striped align-middle">
  <thead class="table-light">
    <tr>
      <th>User</th>
      <th>Challenge</th>
      <th>Points</th>
      <th>Joined</th>
    </tr>
  </thead>
  <tbody>
    <% @participations.each do |p| %>
      <tr>
        <td><%= p.user.name %></td>
        <td><%= link_to p.challenge.name, p.challenge %></td>
        <td><%= p.points %></td>
        <td><%= p.date_start %></td>
      </tr>
    <% end %>
  </tbody>
</table>
