<h1 class="mb-4">Participations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Challenge</th>
      <th>Points</th>
      <th>Start Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @participations.each do |p| %>
      <tr>
        <td><%= p.user.name %></td>
        <td><%= p.challenge.name %></td>
        <td><%= p.points %></td>
        <td><%= p.date_start %></td>
        <td>
          <%= link_to "Show", participation_path(p), class: "btn btn-sm btn-info me-1" %>
          <%= link_to "Edit", edit_participation_path(p), class: "btn btn-sm btn-warning me-1" %>
          <%= link_to "Delete", participation_path(p), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Participation", new_participation_path, class: "btn btn-primary" %>
