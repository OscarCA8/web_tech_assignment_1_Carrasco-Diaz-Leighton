<h1>Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Birthday</th>
      <th>Nationality</th>
      <th>Gender</th>
      <th>Admin?</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.birthday %></td>
        <td><%= user.nationality %></td>
        <td><%= user.gender %></td>
        <td><%= user.is_admin? ? "Yes" : "No" %></td>
        <td>
          <%= link_to "Show", user_path(user), class: "btn btn-sm btn-info" %>
          <%= link_to "Edit", edit_user_path(user), class: "btn btn-sm btn-warning" %>
          <%= link_to "Delete", user_path(user), class: "btn btn-sm btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New User", new_user_path, class: "btn btn-primary mb-3" %>
