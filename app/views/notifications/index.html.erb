<h1>Notifications</h1>

<% if @notifications.any? %>
  <ul class="list-group">
    <% @notifications.each do |n| %>
      <li class="list-group-item <%= 'list-group-item-secondary' if n.read %>">
        <strong><%= n.user.name %></strong>: <%= n.message %>
        <small class="text-muted d-block"><%= n.created_at.strftime('%Y-%m-%d %H:%M') %></small>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No notifications yet.</p>
<% end %>
